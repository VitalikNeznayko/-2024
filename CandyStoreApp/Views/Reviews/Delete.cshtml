@model CandyStoreApp.Models.Review

@{
    ViewData["Title"] = "Видалити відгук";
}

<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">Видалити відгук</h1>
        <p class="text-muted fs-5">
            Ви впевнені, що хочете видалити цей відгук? <br />
            <span class="fst-italic">Цю дію не можна скасувати.</span>
        </p>
    </div>

    <div class="card shadow-lg p-4 col-md-6">
        <h4 class="text-muted text-center mb-4">Деталі відгуку</h4>
        <hr class="mb-4" />
        <dl class="row">
            <dt class="col-sm-6 fw-semibold">Рейтинг:</dt>
            <dd class="col-sm-6">@Html.DisplayFor(model => model.Rating)</dd>

            <dt class="col-sm-6 fw-semibold">Текст відгуку:</dt>
            <dd class="col-sm-6">@Html.DisplayFor(model => model.ReviewText)</dd>

            <dt class="col-sm-6 fw-semibold">Дата відгуку:</dt>
            <dd class="col-sm-6">@Html.DisplayFor(model => model.ReviewDate)</dd>

            <dt class="col-sm-6 fw-semibold">Клієнт:</dt>
            <dd class="col-sm-6">@Html.DisplayFor(model => model.IdClientNavigation.IdClient)</dd>

            <dt class="col-sm-6 fw-semibold">Продукт:</dt>
            <dd class="col-sm-6">@Html.DisplayFor(model => model.IdProductNavigation.IdProduct)</dd>
        </dl>

        <div class="text-center mt-4">
            <form asp-action="Delete" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdReview" />
                <button type="submit" class="btn btn-danger px-4 py-2 me-2">
                    <i class="bi bi-trash-fill"></i> Підтвердити видалення
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                <i class="bi bi-arrow-left-circle"></i> Повернутися
            </a>
        </div>
    </div>
</div>
