@model CandyStoreApp.Models.Product

@{
    ViewData["Title"] = "Створення нового продукту";
}

<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
    <div class="text-center mb-4">
        <h1 class="text-primary">Створення нового продукту</h1>
        <p class="text-muted">Будь ласка, заповніть форму для створення нового продукту.</p>
        <hr />
    </div>

    <div class="col-md-6 shadow-lg p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="ProductName" class="control-label font-weight-bold">Назва продукту</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCategory" class="control-label font-weight-bold">Категорія</label>
                <select asp-for="IdCategory" class="form-select" asp-items="ViewBag.IdCategory"></select>
                <span asp-validation-for="IdCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdSupplier" class="control-label font-weight-bold">Постачальник</label>
                <select asp-for="IdSupplier" type="number" step="0.01" class="form-select" asp-items="ViewBag.IdSupplier"></select>
                <span asp-validation-for="IdSupplier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label font-weight-bold">Ціна</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label font-weight-bold">Кількість</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label font-weight-bold">Опис продукту</label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group text-center my-4">
                <button type="submit" class="btn btn-primary px-4 py-2">Створити</button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 ml-2">Повернутися до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
