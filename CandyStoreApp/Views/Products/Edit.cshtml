@model CandyStoreApp.Models.Product

@{
    ViewData["Title"] = "Редагувати продукт";
}

<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
    <div class="text-center mb-4">
        <h1 class="text-center text-warning my-4">Редагувати продукт</h1>
        <h4 class="text-muted text-center">Інформація про продукт</h4>
        <hr />
    </div>
    <div class="col-md-6 shadow p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduct" />

            <div class="form-group">
                <label asp-for="ProductName" class="control-label font-weight-bold">Назва продукту</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdCategory" class="control-label font-weight-bold">Категорія</label>
                <select asp-for="IdCategory" class="form-control" asp-items="ViewBag.IdCategory"></select>
                <span asp-validation-for="IdCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdSupplier" class="control-label font-weight-bold">Постачальник</label>
                <select asp-for="IdSupplier" class="form-control" asp-items="ViewBag.IdSupplier"></select>
                <span asp-validation-for="IdSupplier" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label font-weight-bold">Ціна</label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label font-weight-bold">Кількість</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label font-weight-bold">Опис продукту</label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group text-center my-4">
                <input type="submit" value="Зберегти" class="btn btn-primary px-4 py-2" />
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 ml-2">Повернутися до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
