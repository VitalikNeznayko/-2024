@model CandyStoreApp.Models.Supplier

@{
    ViewData["Title"] = "Змінити постачальника";
}

<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
    <div class="text-center mb-4">
        <h1 class="text-center text-warning my-4">Змінити постачальника</h1>
        <h4 class="text-muted text-center">Інформація про постачальника</h4>
        <hr />
    </div>
    <div class="col-md-6 shadow p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSupplier" />
            <div class="form-group">
                <label asp-for="SupplierName" class="control-label font-weight-bold">Назва постачальника</label>
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPerson" class="control-label font-weight-bold">Контактна особа</label>
                <input asp-for="ContactPerson" class="form-control" />
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label font-weight-bold">Телефонний номер</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierAddress" class="control-label font-weight-bold">Адреса постачальника</label>
                <input asp-for="SupplierAddress" class="form-control" />
                <span asp-validation-for="SupplierAddress" class="text-danger"></span>
            </div>
            <div class="form-group text-center my-4">
                <input type="submit" value="Зберегти" class="btn btn-primary px-4 py-2" />
                 <a asp-action="Index" class="btn btn-secondary px-4 py-2">Повернутися до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
