@model CandyStoreApp.Models.Category

@{
    ViewData["Title"] = "Створення категорію";
}

<div class="container d-flex flex-column justify-content-center align-items-center mt-5">
    <div class="text-center mb-4">
        <h1 class="text-primary">Створення категорії</h1>
        <p class="text-muted">Будь ласка, введіть назву нової категорії.</p>
        <hr />
    </div>

    <div class="col-md-6 shadow-lg p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label font-weight-bold">Назва категорії</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Введіть назву категорії" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group text-center my-4">
                <button type="submit" class="btn btn-primary px-4 py-2">Створити</button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2 ml-2">Повернутися до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
